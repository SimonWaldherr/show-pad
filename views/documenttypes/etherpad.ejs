<% layout('../doc.ejs') %>
<% block('title', padId) -%>
<% script('/js/etherpad.js') %>

<div id="pad"></div>

<script>
// show pad
$('#pad').pad(
    {
        'padId': '<%=groupID%>$<%=padId%>',
        'showControls': false,
        'showChat': false,
        'host': '<%=eplurl%>',
        'height': ($(window).height() - 175) + "px",
        'width': '100%'
    });
</script>
